#!/usr/bin/env bash

function exitstatus_prompt {
  status=$?
  if [ "$status" -eq 0 ]
  then
    # Yay, everything went great
    echo -e "${1}"
  else
    if [ "$SHOW_EXIT_STATUS_IN_PROMPT" = "YES" ]
    then
      status_prefix=" (${txtred}${status}${txtrst})"
    fi
    # The last command broke my heart...
    echo -e "${status_prefix}${2}"
  fi
  return $status
}